@using ASP_MVC_MYSQL.Data.DTO;
@model LibroDTO

<h2>Crear libro</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Autor"></label>
        <input asp-for="Autor" class="form-control" />
        <span asp-validation-for="Autor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumPag"></label>
        <input asp-for="NumPag" class="form-control" />
        <span asp-validation-for="NumPag" class="text-danger"></span>
    </div>
    <br /><button type="submit" class="btn btn-primary">Enviar</button>
    <span asp-validation-summary="All" class="text-danger"></span>
</form>

@if (TempData["ErrorAgregar"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorAgregar"]</div>
}




