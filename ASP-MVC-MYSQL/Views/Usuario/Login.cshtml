@using ASP_MVC_MYSQL.Data.DTO;
@model UsuarioDTO

@if (TempData["RegistroExitoso"] != null)
{
    <div class="alert alert-success">
        @TempData["RegistroExitoso"]
    </div>
}


<div class="row mt-5">
    <div class="col-sm-4 offset-sm-4">
        <h2>Inicio de sesión</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contraseña" class="form-label"></label>
                <input asp-for="Contraseña" class="form-control" type="password" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

            <br /><button type="submit" class="btn btn-primary">Ingresar</button>
            <span asp-validation-summary="All" class="text-danger"></span>
        </form>


    </div>
</div>

@if (TempData["ErrorLogin"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorLogin"]</div>
}

